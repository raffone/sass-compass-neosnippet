# String Functions

snippet unquote
	unquote(${1:string})${10}

snippet quote
	quote(${1:string})${10}


# Number Functions

snippet percentage
	percentage(${1:value})${10}

snippet round
	round(${1:value})${10}

snippet ceil
	ceil(${1:value})${10}

snippet floor
	floor(${1:value})${10}

snippet abs
	abs(${1:value})${10}

snippet min
	min(${1:numbers})${10}

snippet max
	max(${1:numbers})${10}


# List Functions

snippet length
	length(${1:list})${10}

snippet nth
	nth(${1:list}, ${2:n})${10}

snippet join
	join(${1:list1}, ${2:list2}, [${3:separator}])${10}

snippet append
	append(${1:list1}, ${2:val}, [${3:separator}])${10}

snippet zip
	zip(${1:lists})${10}

snippet index
	index(${1:list}, ${2:value})${10}


# Introspection Functions

snippet type
	type-of(${1:value})${10}

snippet unit
	unit(${1:number})${10}

snippet unitless
	unitless(${1:number})${10}

snippet comparable
	comparable(${1:number-1}, ${2:number-2})${10}


# Miscellaneous Functions

snippet if
	if(${1:condition}, ${2:if-true}, ${3:if-false})${10}

