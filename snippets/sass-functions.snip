# HSL Functions

snippet hsl
	hsl(${1:hue}, ${2:saturation}, ${3:lightness})${10}

snippet hsla
	hsla(${1:hue}, ${2:saturation}, ${3:lightness}, ${4:alpha})${10}

snippet hue
	hue(${1:color})${10}

snippet saturation
	saturation(${1:color})${10}

snippet lightness
	lightness(${1:color})${10}

snippet adjust
	adjust-hue(${1:color}, ${2:degrees})${10}

snippet lighten
	lighten(${1:color}, ${2:amount})${10}

snippet darken
	darken(${1:color}, ${2:amount})${10}

snippet saturate
	saturate(${1:color}, ${2:amount})${10}

snippet desaturate
	desaturate(${1:color}, ${2:amount})${10}

snippet grayscale
	grayscale(${1:color})${10}

snippet complement
	complement(${1:color})${10}

snippet invert
	invert(${1:color})${10}


# Opacity Functions

snippet alpha
	alpha(${1:color})${10}

snippet rgba
	rgba(${1:color}, ${2:alpha})${10}

snippet fade-in
	fade-in(${1:color}, ${2:amount})${10}

snippet fade-out
	fade-out(${1:color}, ${2:amount})${10}


